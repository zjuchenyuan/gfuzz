       -e 's/msg_control/Control/' \
-      -e 's/msg_controllen *[a-zA-Z0-9_]*/Controllen Msghdr_controllen_t/' \
+      -e 's/msg_controllen *[a-zA-Z0-9_]*/Controllen uint64/' \
       -e 's/msg_flags/Flags/' \
